<%-include("partial/header")-%>

<h1>Add Your Item Here</h1>

<br />
<br />

<p>Please fill the required details</p>
<!-- <p><span class="star">*</span>denotes Mandatory Fields</p> -->
<form action='/sell/<%=itemName%>' method="post" enctype="multipart/form-data">
  <div class="">
    <h4>Personal Details</h4>
    <div class="form-group ">
      <label for="fname"  ><span class="star">*</span>Your Name:  </label>
      <input type="text" name="name" id="fname" class="form-control col-lg-3 col-md-6" required="true">
    </div>

    <div class="form-group ">
      <label for="userEmail"><span class="star">*</span>Email: </label>
      <input type="email" name="email" id="userEmail" class="form-control col-lg-3 col-md-6" required="true">
    </div>

    <div class="form-group ">
      <label for="userPassword"><span class="star">*</span>Create Your Password: </label>
      <input type="password" name="password" id="userPassword" class="form-control col-lg-3 col-md-6" required="true">
    </div>

    <div class="form-group ">
      <label for="mobile"><span class="star">*</span>Contact No. :</label>
      <input type="text" name="number" id="mobile" class="form-control col-lg-3 col-md-6" required="true">
    </div>
  </div>

  <h4>Product Details</h4>

  <div class="form-group ">
    <label for="productName"><span class="star">*</span>Product Name: </label>
    <input type="text" name="pName" id="productName" class="form-control col-lg-3 col-md-6" required="true">
  </div>

  <div class="form-group">
    <label for="purchaseYear"><span class="star">*</span>Year of Purchase:</label>
    <input type="text" name="year" id="purchaseYear" class="form-control col-lg-3 col-md-6" required="true">
  </div>

  <div class="form-group">
    <label for="sellingPrice"><span class="star">*</span>Selling Price:</label>
    <input type="text" name="price" id="sellingPrice" class="form-control col-lg-3 col-md-6" required="true">
  </div>

  <div class="form-group">
    <label for="modelP">Brand and Model:</label>
    <input type="text" name="model" id="modelP" class="form-control col-lg-3 col-md-6">
  </div>

  <div class="form-group">
    <label for="speP">Other Specifications:</label>
    <input type="text" name="other" id="speP" class="form-control col-lg-3 col-md-6">
  </div>

  <div class="form-group">
    <label><span class="star">*</span>Photo of Product</label>
    <input type='file' name='image' class="form-control-file" required="true">
  </div>

  <button type="submit" name="button" class="btn btn-primary btn-lg col-lg-3 col-md-6">Submit</button>
</form>

<%-include("partial/footer")-%>
